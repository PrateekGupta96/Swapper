<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="Swapper"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.swapper.MainActivity"
    android:background="@android:color/background_light">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/etfname"
        android:layout_alignRight="@+id/etfname"
        android:layout_alignEnd="@+id/etfname"
        android:id="@+id/etlname"
        android:hint="Last Name" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etmail"
        android:id="@+id/button"
        android:layout_alignRight="@+id/etmail"
        android:layout_alignEnd="@+id/etmail"
        android:layout_alignLeft="@+id/etmail"
        android:layout_alignStart="@+id/etmail"
        android:fontFamily="sans-serif-condensed"
        android:backgroundTint="@android:color/holo_green_light"
        android:onClick="Register"
        android:elevation="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/etmail"
        android:hint="PES Mail ID"
        android:layout_below="@+id/etlname"
        android:layout_alignLeft="@+id/etlname"
        android:layout_alignStart="@+id/etlname" />

    <TextView
        android:text="Registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/textView5"
        android:textSize="24sp"
        android:textColor="@android:color/holo_red_light" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/etfname"
        android:hint="First Name"
        android:includeFontPadding="false"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
